{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        // "baseUrl": "./", //deprecated,
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        // "paths": {
        //     "@/*": [  
        //             "src/*"
        //         ]
        // },
        "typeRoots": [ "./src/@types" ]
    },
    "include": [ "src/**/*.ts" ],
    "exclude": [ "node_modules" ]
}
